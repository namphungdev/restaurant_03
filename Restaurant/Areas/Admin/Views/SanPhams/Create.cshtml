                    <label asp-for="NgayCapNhat" class="control-label"></label>
                    <input asp-for="NgayCapNhat" class="form-control" />
                    <span asp-validation-for="NgayCapNhat" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MaLoaiSanPham" class="control-label"></label>
                    <select asp-for="MaLoaiSanPham" class="form-control" asp-items="ViewBag.MaLoaiSanPham"></select>
                </div>
                <div class="form-group">
                    <label asp-for="MaThucDon" class="control-label"></label>
                    <select asp-for="MaThucDon" class="form-control" asp-items="ViewBag.MaThucDon"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>


