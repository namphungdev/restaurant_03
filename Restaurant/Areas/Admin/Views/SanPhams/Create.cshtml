@model Restaurant.Models.SanPham

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <h1>Thêm sản phẩm mới</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
