                </div>
                <div class="form-group">
                    <label asp-for="NguyenLieu" class="control-label"></label>
                    <input asp-for="NguyenLieu" class="form-control" />
                    <span asp-validation-for="NguyenLieu" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ChiTiet" class="control-label"></label>
                    <input asp-for="ChiTiet" class="form-control" />
                    <span asp-validation-for="ChiTiet" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tien" class="control-label"></label>
                    <input asp-for="Tien" class="form-control" />
                    <span asp-validation-for="Tien" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GiamGia" class="control-label"></label>
                    <input asp-for="GiamGia" class="form-control" />
                    <span asp-validation-for="GiamGia" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="KichThuoc" class="control-label"></label>
                    <input asp-for="KichThuoc" class="form-control" />
                    <span asp-validation-for="KichThuoc" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SoLuongSanPham" class="control-label"></label>
                    <input asp-for="SoLuongSanPham" class="form-control" />
                    <span asp-validation-for="SoLuongSanPham" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NgayNhap" class="control-label"></label>
                    <input asp-for="NgayNhap" class="form-control" />
                    <span asp-validation-for="NgayNhap" class="text-danger"></span>
                </div>
