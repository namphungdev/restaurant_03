@model IEnumerable<Restaurant.Models.HoaDon>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <section style="background-color: #eee;">
        <div class="container py-5">
            <div class="row">
                <div class="col" id="load">
                    <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item"><a href="#">User</a></li>
                            <li class="breadcrumb-item active" aria-current="page">User Profile</li>
                        </ol>
                    </nav>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-body text-center">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
                                 class="rounded-circle img-fluid" style="width: 150px;">
                            <h5 class="my-3">Thành Nam</h5>
                        </div>
                    </div>
                    <div class="card mb-4 mb-lg-0">
                        <div class="card-body p-0">
                            <ul class="list-group list-group-flush rounded-3">
                                <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                    <a href="/Profile/index">
                                        <p class="mb-0">Thông tin cá nhân</p>
                                    </a>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                    <a href="/Hoadons/Index">
                                        <p class="mb-0">Danh sách hóa đơn</p>
                                    </a>
                                </li>

                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card mb-4">

                        <div class="card-body">
                            <table class="table">
                                <thead class="dark">
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.MaHoaDon)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.NgayLap)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.TongTien)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.SoLuong)
                                        </th>

                                        <th>
                                            @Html.DisplayNameFor(model => model.MaThanhToan)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.MaVanChuyen)
                                        </th>


                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <a href="/HoaDons/Details/@Html.DisplayFor(modelItem => item.MaHoaDon)">#@Html.DisplayFor(modelItem => item.MaHoaDon)</a>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NgayLap)
                                            </td>
                                            <td>
                                                @{ var tong = item.TongTien;}
                                                @String.Format("{0:n0}", tong) ₫
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SoLuong)
                                            </td>

                                            @if (item.MaThanhToanNavigation.MaThanhToan == 1)
                                            {
                                                <td style="color: red">
                                                    @Html.DisplayFor(modelItem => item.MaThanhToanNavigation.TrangThaiThanhToan)
                                                </td>
                                            }
                                            else
                                            {
                                                <td style="color: green">
                                                    @Html.DisplayFor(modelItem => item.MaThanhToanNavigation.TrangThaiThanhToan)
                                                </td>
                                            }
                                            @if (item.MaVanChuyenNavigation.MaVanChuyen == 1)
                                            {
                                                <td style="color: red">
                                                    @Html.DisplayFor(modelItem => item.MaVanChuyenNavigation.TrangThaiVanChuyen)
                                                </td>
                                            }
                                            else
                                            {
                                                <td style="color: green">
                                                    @Html.DisplayFor(modelItem => item.MaVanChuyenNavigation.TrangThaiVanChuyen)
                                                </td>
                                            }


                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</main>


