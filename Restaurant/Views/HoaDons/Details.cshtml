@model IEnumerable<Restaurant.Models.ChiTietHoaDon>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <section style="background-color: #eee;">
        <div class="container py-5">
            <div class="row">
                <div class="col">
                    <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item"><a href="#">User</a></li>
                            <li class="breadcrumb-item active" aria-current="page">User Profile</li>
                        </ol>
                    </nav>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-body text-center">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
                                 class="rounded-circle img-fluid" style="width: 150px;">
                            <h5 class="my-3">Thành Nam</h5>
                            @*<p class="text-muted mb-1">Full Stack Developer</p>
                                <p class="text-muted mb-4">Bay Area, San Francisco, CA</p>*@
                            <div class="d-flex justify-content-center mb-2">
                                <button type="button" class="btn btn-primary">Follow</button>
                                <button type="button" class="btn btn-outline-primary ms-1">Message</button>
                            </div>
                        </div>
                    </div>
                    <div class="card mb-4 mb-lg-0">
                        <div class="card-body p-0">
                            <ul class="list-group list-group-flush rounded-3">
                                <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                    <a href="/Profile/index">
                                        <p class="mb-0">Thông tin cá nhân</p>
                                    </a>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                    <a href="/Hoadons">                  
                                        <p class="mb-0">Danh sách hóa đơn</p>
                                    </a>
                                </li>

                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card mb-4">
                        <div class="card-body">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.MaSanPhamNavigation.AnhSanPham)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.MaSanPhamNavigation)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.TongTien)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.SoLuong)
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="thumb_cart">
                                                    <img src="~/img/SanPham/@Html.DisplayFor(modelItem => item.MaSanPhamNavigation.AnhSanPham)" class="lazy" alt="Image">
                                                </div>                                              
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MaSanPhamNavigation.TenSanPham)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TongTien)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SoLuong)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>  
                            <div class="box_cart">
                                <div class="container">
                                    <div class="row justify-content-end">
                                        <div class="col-xl-4 col-lg-4 col-md-6">
                                            @if (Model != null)
                                            {
                                                int total = 0;
                                                <ul>
                                                    <li>
                                                        <span>Tổng tiền</span>  @foreach (var item in Model)
                                                        {

                                                            var thanhtien = (item.MaSanPhamNavigation.Tien - (item.MaSanPhamNavigation.Tien * item.MaSanPhamNavigation.GiamGia / 100)) * item.SoLuong;
                                                            total += (int)thanhtien;
                                                        }
                                                        @(String.Format("{0:n0}", total)) ₫
                                                    </li>
                                                    <li>
                                                        <span>Giao hàng</span> @(String.Format("{0:n0}", 35000)) ₫
                                                    </li>
                                                    <li>
                                                        <span>Tổng tiền</span> @(String.Format("{0:n0}", total + 35000)) ₫
                                                    </li>
                                                </ul>
                                            }

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                 
                </div>
            </div>
        </div>
    </section>
</main>


